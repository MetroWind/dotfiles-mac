[include]
  path = .git-user

[core]
  excludesfile = ~/.gitignore_global

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --all --date=short
  topo = log --graph --all --decorate --simplify-by-decoration --oneline --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --date=short
  stat = status -sb
  discard = stash save --keep-index Discarded

[i18n]
	commitEncoding = utf-8
	logOutputEncoding = utf-8
[push]
	default = simple
[log]
	date = iso

[init]
defaultBranch = master
[user]
	name = MetroWind
[http "https://git.xeno.darksair.org/"]
	proactiveAuth = basic
